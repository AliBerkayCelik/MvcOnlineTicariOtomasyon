@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip No: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />

<h2>Departman Listeleme Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>

        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>

        <th>Detaylar</th>
    </tr>
    @foreach (var kargo in Model)
    {
        <tr>
            <td>@kargo.Personel</td>
            <td>@kargo.Alici</td>
            <td>@kargo.Tarih</td>
            <td>@kargo.TakipKodu</td>
            <td><a href="/Kargo/KargoTakip/@kargo.TakipKodu" class="btn btn-success">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Kargo/KargoEkle" class="btn btn-primary">Yeni Kargo</a>


